"VertexLitGeneric"
{
	"$basetexture" "z_easyskins/camo/holo"

	// light in the dark 
  	$selfillum 1
    	$selfillummask "z_easyskins/camo/holo"

	//make the texture more detailed
	$detail "z_easyskins/camo/holo"
	$detailscale "7"
	$detailblendmode "0"
	$detailblendfactor "0.9"

	// small reflection
	$reflectivity "[1 1 1]"

                     "Proxies"
             		  {
   	   	"AnimatedTexture"
    		  {
     		    "animatedtexturevar" "$basetexture"
      		    "animatedtextureframenumvar" "$frame"
         		    "animatedtextureframerate" "15"
     		  }
  	 }
	
}